<!DOCTYPE html>
<html>
<%- include("header") %>
    <body>
        <div class="container">
            <h1><%= pageTitle %></h1>
            <p class="mb-4"><a href="/blogs/create" class="btn btn-success">Create Blog</a></p>
            <% if(blogs.length) { 
                blogs.forEach(blog => { %>
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <p class="card-text"><%= blog.body %></p>
                            <a href="/blogs/<%= blog.slug %>" class="btn btn-primary">Read More</a>
                            <a href="/blogs/edit/<%= blog.id %>" class="btn btn-info">Edit</a>
                            <form onsubmit="return confirmDelete()" action="/blogs/<%= blog.id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
            <%    })
            } %>
        </div>
        <%- include("footer") %>
        <script>
            function confirmDelete() {
                if( confirm("Are you sure you want to delete this blog?") ) {
                    return true;
                }
                return false;
            }
        </script>
    </body>
</html>